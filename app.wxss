/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 


.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.tip {
  margin: 50px 1em 1em 1em; 
  padding: 4em 2em 2em 2em;
  border-radius: 8px;
  font-size: 18;
  color: #444;

  background-color: white;
}

.tip-done {
  text-indent: 2em;
  margin: 1em; 
  padding: 2em;
  border-radius: 8px;
  font-size: 18;
  color: #444;

  background-color: #f5cdd3;
}

.logo {
  position: absolute;
  top: 10px;
  left: 50%;
  margin-left: -40px;
  width: 80px;
  height: 80px;
  border-radius: 20px;
}

.qabtn {
  color: white;
  background-color: rgb(83, 134, 209);
  margin-top: 8px;
}